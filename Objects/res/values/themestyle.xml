<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	    <style name="MyAppThemeLight" parent="@style/Theme.AppCompat.Light">
		  <item name="android:windowBackground">#FFFFFF</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">#FFA950DD</item>
		 <item name="android:navigationBarColor">#FFFFFF</item>
		 <item name="android:textColorPrimary">#1B1B1B</item>
		 <item name="android:statusBarColor">#FFFFFF</item>
		 <item name="popupMenuStyle">@style/PopupMenuLight</item>
		<item name="windowActionBar">false</item>

        <item name="windowNoTitle">true</item>       
        <item name="windowActionModeOverlay">true</item>
    </style>
	
	    <style name="MyAppThemeDark" parent="@style/Theme.AppCompat">
        <item name="android:windowBackground">#1B1B1B</item>
        <item name="colorPrimary">#1B1B1B</item>
        <item name="colorPrimaryDark">#1B1B1B</item>
		 <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="colorAccent">#FFA950DD</item>
		 <item name="android:navigationBarColor">#1B1B1B</item>
		 <item name="android:statusBarColor">#1B1B1B</item>
		<item name="windowActionBar">false</item>
		<item name="popupMenuStyle">@style/PopupMenuDark</item>
        <item name="windowNoTitle">true</item>     
        <item name="windowActionModeOverlay">true</item>
    </style>
	
	<style name="PopupMenuDark" parent="@style/Theme.AppCompat">
    <item name="android:popupBackground">#1B1B1B</item>
</style>
	
	<style name="PopupMenuLight" parent="@style/Theme.AppCompat.Light">
    <item name="android:popupBackground">#FFFFFF</item>
</style>
	
</resources>